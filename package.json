{
  "name": "udfast-core",
  "version": "1.0.0",
  "description": "core service for udfast-ui based on peerjs, enabling p2p file transfer.",
  "main": "./lib/src/index.js",
  "typings": "lib/src/index.d.ts",
  "module": "lib-esm/src/index.js",
  "directories": {
    "lib": "lib/src/"
  },
  "files": [
    "CHANGELOG.md",
    "README.md",
    "lib",
    "lib-esm",
    "src",
    "_bundles"
  ],
  "config": {
    "port": "9000",
    "tddRetry": "0",
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "tdd": "concurrently -k --restart-tries ${npm_package_config_tddRetry} \"npm:karma-test:watch\" \"npm:peer-serve\"",
    "test": "npm run lint && concurrently --success first -k \"npm:karam-test:singlerun\" \"npm:peer-serve\"",
    "build": "rm -rf dist lib-esm lib && concurrently \"npm:build.*\"",
    "build.commonjs": "tsc",
    "build.es6": "tsc -m es6 --outDir lib-esm",
    "build.umd": "cross-env NODE_ENV=production webpack --config webpack.prod.js",
    "peer-serve": "peerjs -p ${npm_package_config_port}",
    "lint": "eslint --ext .ts,.tsx src",
    "karam-test:singlerun": "export REPORT=1 && karma start --single-run",
    "karma-test:watch": "karma start",
    "upload": "npm run build && npm publish --registry http://localhost:4873"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/begoat/udfast-core.git"
  },
  "keywords": [
    "webrtc",
    "file",
    "sharing",
    "peerjs",
    "udfast"
  ],
  "author": "William Huang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/begoat/udfast-core/issues"
  },
  "homepage": "https://github.com/begoat/udfast-core#readme",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@types/jasmine": "^3.5.9",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.9.1",
    "@types/uuid": "^7.0.0",
    "@typescript-eslint/eslint-plugin": "2.19.0",
    "@typescript-eslint/parser": "2.19.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "babel-preset-react-app": "^9.1.1",
    "concurrently": "^5.1.0",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-react-app": "^5.2.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-loader": "^3.0.3",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "jasmine-core": "^3.5.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.1",
    "karma-jasmine": "^3.1.1",
    "karma-safari-applescript-launcher": "^0.1.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^4.0.2",
    "peer": "^0.3.2",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "date-fns": "^2.11.0",
    "lodash": "^4.17.15",
    "peerjs": "^1.2.0",
    "uuid": "^7.0.2",
    "web-streams-polyfill": "^2.1.0"
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
